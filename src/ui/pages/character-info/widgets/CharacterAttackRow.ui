<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0" />
  <requires lib="libadwaita" version="1.0" />
  <template class="DungeonJournalCharacterAttackRow">
    <property name="width_request">100</property>
    <property name="activatable">0</property>
    <property name="selectable">0</property>
    <property name="expanded">1</property>


    <child type="prefix">
      <object class="GtkButton" id="delete_button">
        <property name="valign">center</property>
        <signal name="clicked" handler="on_delete_button_clicked" swapped="no" />
        <property name="child">
          <object class="AdwButtonContent">
            <property name="icon-name">edit-delete-symbolic</property>
          </object>
        </property>
        <style>
          <class name="destructive-action" />
        </style>
      </object>
    </child>

    <child>
      <object class="AdwActionRow">
        <property name="title" translatable="yes">Weapon or Spell</property>
        <child>
          <object class="GtkEntry" id="weapon_entry">
            <property name="valign">center</property>
          </object>
        </child>
      </object>
    </child>

    <child>
      <object class="AdwActionRow">
        <property name="title" translatable="yes">Range</property>
        <child>
          <object class="GtkEntry" id="range_entry">
            <property name="valign">center</property>
          </object>
        </child>
      </object>
    </child>

    <child>
      <object class="AdwActionRow">
        <property name="title" translatable="yes">Damage</property>
        <child>
          <object class="GtkEntry" id="damage_entry">
            <property name="valign">center</property>
          </object>
        </child>
      </object>
    </child>

    <child>
      <object class="AdwActionRow">
        <property name="title" translatable="yes">Attack Bonus</property>
        <child>
          <object class="GtkEntry" id="atkbonus_entry">
            <property name="valign">center</property>
          </object>
        </child>
      </object>
    </child>


  </template>
</interface>