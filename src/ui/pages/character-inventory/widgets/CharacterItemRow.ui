<?xml version="1.0" encoding="UTF-8"?>

<interface>
  <requires lib="gtk" version="4.0" />
  <requires lib="libadwaita" version="1.0" />

  <object class="GtkAdjustment" id="quantity_adjustment">
    <property name="upper">100</property>
    <property name="step_increment">1</property>
    <property name="page_increment">10</property>
  </object>

  <object class="GtkAdjustment" id="weight_adjustment">
    <property name="upper">100</property>
    <property name="step_increment">1</property>
    <property name="page_increment">10</property>
  </object>

  <template class="DungeonJournalCharacterItemRow">
    <property name="width_request">100</property>
    <property name="activatable">0</property>
    <property name="selectable">0</property>

    <!-- Delete Button -->
    <child type="prefix">
      <object class="GtkButton" id="delete_button">
        <property name="valign">center</property>
        <signal name="clicked" handler="on_delete_button_clicked" swapped="no" />
        <property name="child">
          <object class="AdwButtonContent">
            <property name="icon-name">edit-delete-symbolic</property>
          </object>
        </property>
        <style>
          <class name="destructive-action" />
        </style>
      </object>
    </child>

    <!-- Name Entry -->
    <child>
      <object class="AdwActionRow">
        <property name="title" translatable="yes">Name</property>
        1
        <child>
          <object class="GtkEntry" id="name_entry">
            <property name="valign">center</property>
            <property name="width-request">200</property>
          </object>
        </child>
      </object>
    </child>

    <!-- Quantity Entry -->
    <child>
      <object class="AdwActionRow">
        <property name="title" translatable="yes">Quantity</property>
        <child>
          <object class="GtkSpinButton" id="quantity_spinbutton">
            <property name="valign">center</property>
            <property name="text">0</property>
            <property name="width-request">200</property>
            <property name="adjustment">quantity_adjustment</property>
          </object>
        </child>
      </object>
    </child>

    <!-- Cost Entry -->
    <child>
      <object class="AdwActionRow">
        <property name="title" translatable="yes">Cost</property>
        <child>
          <object class="GtkEntry" id="cost_entry">
            <property name="valign">center</property>
            <property name="width-request">200</property>
          </object>
        </child>
      </object>
    </child>

    <!-- Weight Entry -->
    <child>
      <object class="AdwActionRow">
        <property name="title" translatable="yes">Weight</property>
        <child>
          <object class="GtkSpinButton" id="weight_spinbutton">
            <property name="valign">center</property>
            <property name="text">0</property>
            <property name="width-request">200</property>
            <property name="adjustment">weight_adjustment</property>
          </object>
        </child>
      </object>
    </child>

    <!-- Description Box -->
    <child>
      <object class="GtkBox">

        <property name="margin-top">12</property>
        <property name="margin-bottom">12</property>
        <property name="margin-start">12</property>
        <property name="margin-end">12</property>

        <property name="orientation">vertical</property>
        <property name="spacing">12</property>
        <child>
          <object class="GtkLabel">
            <property name="halign">start</property>
            <property name="valign">start</property>
            <property name="label" translatable="yes">Description</property>
          </object>
        </child>
        <child>
          <object class="GtkScrolledWindow">
            <property name="height_request">120</property>
            <property name="hscrollbar_policy">never</property>
            <child>
              <object class="GtkTextView" id="description_entry">
                <property name="wrap_mode">word-char</property>
                <property name="left_margin">6</property>
                <property name="right_margin">6</property>
                <property name="top_margin">6</property>
                <property name="bottom_margin">6</property>
                <style>
                  <class name="rounded"></class>
                </style>
              </object>
            </child>
          </object>

        </child>
      </object>

    </child>

  </template>
</interface>