{
    "app-id" : "io.github.daved3464.DungeonJournal.Devel",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "41",
    "sdk" : "org.gnome.Sdk",
    "command" : "dungeonjournal",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf:ro",
        "--talk-name=ca.desrt.dconf",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "/share/vala",
        "*.la",
        "*.a"
    ],
    "modules" : [        
        {
            "name" : "dungeonjournal",
            "builddir" : true,
            "buildsystem" : "meson",
            "config-opts" : [
                "-Dprofile=development"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "file:///home/hollow3464/Proyectos/DungeonJournal"
                }
            ]
        },
        {
            "name": "libadwaita",
            "buildsystem": "meson",
            "config-opts": [
                "-Dexamples=false",
                "-Dtests=false"
            ],
            "sources": [
                {
                    "type": "git",
                    "url" : "https://gitlab.gnome.org/GNOME/libadwaita.git",
                    "branch": "main"
                }
            ]
        }
    ],
    "build-options" : {
        "env" : {
            "CFLAGS+" : "-DGDK_DISABLE_DEPRECATED -DGTK_DISABLE_DEPRECATED"
        },
        "cflags" : ""
    }
}
